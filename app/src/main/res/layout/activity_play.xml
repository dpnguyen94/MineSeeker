<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assignment.pdnguyen.mineseeker.PlayActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textTrace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Found 2 of 8 mines"
            android:textColor="#00658f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:text="# of Scans Used: 10"
            android:textColor="#00658f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/TableforCells"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textTrace">

        </TableLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
